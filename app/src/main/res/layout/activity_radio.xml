<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".RadioActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f45d5d"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/back_for_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_gravity="center_vertical"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="电台"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="20dp"
                android:textColor="#ffffff"
        />
    </LinearLayout>

    <LinearLayout android:id="@+id/open_category_icon_block"
                  android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:gravity="right"
                  android:background="#f1f1f1"
                  android:layout_marginRight="10dp">
        <TextView android:layout_width="0dp"
                  android:layout_weight="5"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
        android:background="@drawable/bg_open_category">
            <TextView android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:text="分类"
                      android:textAlignment="center"
                      android:layout_gravity="center_vertical"/>
            <ImageView
                    android:id="@+id/open_category_icon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_up_category"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <ListView
                android:id="@+id/radio_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <LinearLayout
                android:id="@+id/menu_radio_category_root_block"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_categories"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/menu_radio_category_center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="中央"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textSize="18dp"
            />
            <TextView
                    android:id="@+id/menu_radio_category_local"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="地方"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textSize="18dp"
            />
            <TextView
                    android:id="@+id/menu_radio_category_newwork"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="网络"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textSize="18dp"
            />
        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#f8f8f8"/>
        <LinearLayout
                android:id="@+id/menu_radio_category_sub_block"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_categories"
                android:orientation="horizontal">
            <ListView
                    android:id="@+id/radio_category_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>