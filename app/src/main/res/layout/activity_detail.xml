<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="8dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:ellipsize="end"
            android:textColor="#000000"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/song_singer_epname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:ellipsize="end"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <!--加载状态-->
    <LinearLayout
        android:id="@+id/loading_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--加载完成状态-->
    <RelativeLayout android:id="@+id/loaded_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <ImageView
                        android:id="@+id/song_pic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@mipmap/ic_launcher" />
                <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#f1f1f1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/song_lyric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:scrollbars="vertical"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/song_seekbar_current_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="0:00"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:textSize="12dp"
                    />
                    <SeekBar
                            android:id="@+id/song_seekbar"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent" />
                    <TextView
                            android:id="@+id/song_seekbar_max_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                    />
                </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:background="@drawable/bg_fab_button"
                    android:orientation="horizontal">
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                                android:orientation="vertical">
                    <ImageView
                            android:id="@+id/skip_previous_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_play_button"
                            app:srcCompat="@drawable/ic_skip_previous_black_24dp" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:orientation="vertical">
                    <ImageView
                            android:id="@+id/play_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_play_button"
                            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:orientation="vertical">
                    <ImageView
                            android:id="@+id/skip_next_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_play_button"
                            app:srcCompat="@drawable/ic_skip_next_black_24dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="63dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/download_icon"
                        android:background="@drawable/bg_download_button"
                       android:src="@drawable/ic_file_download_white_24dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentLeft="true"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="63dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/collect_icon"
                       android:src="@drawable/ic_collect_black_24dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>