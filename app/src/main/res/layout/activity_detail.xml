<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".DetailActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="标题：" />
        <TextView
                android:id="@+id/song_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="歌手：" />
        <TextView
                android:id="@+id/song_singer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="专辑：" />
        <TextView
                android:id="@+id/song_epname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="4"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/song_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:background="@drawable/bg_fab_button"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/collect_icon"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_star_black_24dp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="收藏"/>
        </LinearLayout>
        <TextView    android:layout_width="0dp"
                     android:layout_weight="1" android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="播放"/>
        </LinearLayout>
        <TextView    android:layout_width="0dp"
                     android:layout_weight="1" android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/pause_icon"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_pause_circle_outline_black_24dp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="暂停"/>
        </LinearLayout>
        <TextView    android:layout_width="0dp"
                     android:layout_weight="1" android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/download_icon"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_file_download_black_24dp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="下载"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>