<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/song_name_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="输入歌曲名或歌手"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:maxLength="30"
        android:singleLine="true"
        android:background="@drawable/bg_song_name_input"
        />

    <ListView
        android:id="@+id/song_name_list"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:background="@drawable/bg_fab_button"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_home_black_24dp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="首页"/>
        </LinearLayout>
        <TextView    android:layout_width="0dp"
                     android:layout_weight="1" android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/has_collect_icon"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_star_black_24dp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="已收藏"/>
        </LinearLayout>
        <TextView    android:layout_width="0dp"
                     android:layout_weight="1" android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/has_download_icon"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_file_download_black_24dp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:text="已下载"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>